body {
  max-width: 1220px;
  margin: 0 auto;
  background-color: {{ settings.bg }}
  ;

}

header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40px;
  background: #D3FFDE;
  color: black;
  padding: 0 10px;
}

header ul {
  display: flex;
  align-items: center;
  gap: 15px;
}
header ul li {
  list-style: none;
  font-size: 18px;
}

header input {
  padding: 10px 5px;
  border: none;
  outline: none;
  border-radius: 5px 0 0 5px;

}
header form {
  display: flex;
  align-items: center;
  margin-top: 20px
}
.btnSearch {
  padding: 10px 15px;
  border: none;
  background: black;
  color: white;
  border-radius: 0 5px 5px 0;
  cursor: pointer;
}

.contactBtn {
  padding: 10px 15px;
  border: none;
  background: black;
  color: white;
  cursor: pointer;
  border-radius: 5px;
  font-size: 14px;
}
.product-wrapper {
  border: 1px solid black;
  margin: 0 10px 10px;
  padding: 15px;
  border-radius: 10px
}

.btn {
  width: 100%;
  padding: 10px 0;
  text-align: center;
  background: #D3FFDE;
  font-size: 18px;
  color: black;
  border: none;
  outline: none;
  border-radius: 5px;
  transition: all 0.2s ease-in-out;
  cursor: pointer;
}


.btn:hover {
  background: black;
  color: white;
}


.grid-1 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15px;
}

.btnDelete {
  background: red;
  color: white;
  padding: 5px 15px;
  border-radius: 15px;
  cursor: pointer;
}
.btnUpdate {
  border: none;
  color: white;
  font-size: 18px;
  padding: 10px 20px;
  background: green;
  border-radius: 15px;
  cursor: pointer;
}

.btnCheckout {
  border: none;
  color: black;
  font-size: 18px;
  padding: 10px 20px;
  background: yellow;
  border-radius: 15px;
  cursor: pointer;
}



a {
  text-decoration: none;
  color: black
}

li {
  list-style: none;
}

img {
  width: 100%;
  height: 100%;
}

span {
  font-weight: 600;
}


.productWrapper {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  gap: 60px;
}

.quantities {}
.quantity {
  padding: 10px 5px;
  border-radius: 10px;
}

#sort-by {
  padding: 10px 15px;
  margin-bottom: 20px;
}

.pagination {
  width: 50%;
  text-align: center;
  font-size: 22px;
  margin: 40px auto 0;
  padding: 10px 15px;
  border: 1px solid black;
  border-radius: 5px;
}

.markq {
  width: 100%;
  background: black;
  color: white;
  padding: 5px 20px;
  font-size: 18px;
  margin-top: 80px;
}

.footer {
  width: 100%;
  padding: 15px 20px;
  background: #D3FFDE;

}

.footer h1 {
  font-size: 18px;
}

.footerWrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.footerWrapper h2 {
  font-size: 14px;
}

.footerWrapper ul li {
  font-size: 12px;
  margin-left: -34px;
}

.footerWrapper p {
  font-size: 12px;
}

.ftrbox {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

}

.footerBoxOne {
  display: flex;
  align-items: center;
  gap: 20px;

}
.footerBoxTwo input {
  width: 50%;
  padding: 10px 5px;
  border-radius: 5px 0 0 5px;
  border: none;
  outline: none;
}



#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
  margin-bottom: 40px
}

#customers td,
#customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even) {
  background-color: #f2f2f2;
}

#customers tr:hover {
  background-color: #ddd;
}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: black;
  color: white;
}

/* ''''''''''''''''''Media query Tablet version */

@media screen and (max-width: 1024px) {
  h1 {
    font-size: 2.2rem;
  }
  h2 {
    font-size: 1.7rem;
  }
  h3 {
    font-size: 1.4rem;
  }
  h4 {
    font-size: 1.2rem;
  }
  .grid-1 {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* ''''''''''''''Media query mobile version''''''''''' */
@media screen and (max-width: 576px) {
  .grid-1 {
    grid-template-columns: repeat(1, 1fr);
  }

  header h1 {
    font-size: 10px
  }
  header ul {
    gap: 5px;
  }
  header ul li {

    font-size: 12px;
  }

  header input {
    padding: 5px 8px;
    width: 70px;
  }
  .btnSearch {
    padding: 5px 8px;

  }
  .footerWrapper {
    flex-direction: column;
  }
}