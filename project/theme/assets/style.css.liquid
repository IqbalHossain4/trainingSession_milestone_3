body {
  max-width: 1220px;
  margin: 0 auto;
}

header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40px;
  background: #D3FFDE;
  color: black;
  padding: 0 10px;
}

.product-wrapper {
  border: 1px solid black;
  margin: 0 10px 10px;
  padding: 15px;
  border-radius: 10px
}

.btn {
  width: 100%;
  padding: 10px 0;
  text-align: center;
  background: #D3FFDE;
  font-size: 18px;
  color: black;
  border: none;
  outline: none;
  border-radius: 5px;
  transition: all 0.2s ease-in-out;
  cursor: pointer;
}


.btn:hover {
  background: black;
  color: white;
}


.grid-1 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15px;
}

.btnDelete {
  background: red;
  color: white;
  padding: 5px 15px;
  border-radius: 15px;
  cursor: pointer;
}
.btnUpdate {
  border: none;
  color: white;
  font-size: 18px;
  padding: 10px 20px;
  background: green;
  border-radius: 15px;
  cursor: pointer;
}

.btnCheckout {
  border: none;
  color: black;
  font-size: 18px;
  padding: 10px 20px;
  background: yellow;
  border-radius: 15px;
  cursor: pointer;
}


ul {
  display: flex;
  align-items: center;
  gap: 15px;
}
ul li {
  list-style: none;
  font-size: 18px;
}
a {
  text-decoration: none;
  color: black
}

img {
  width: 100%;
  height: 100%;
}

span {
  font-weight: 600;
}


#sort-by {
  padding: 10px 15px;
  margin-bottom: 20px;
}

.pagination {
  width: 50%;
  text-align: center;
  font-size: 22px;
  margin: 0 auto;
  padding: 10px 15px;
  border: 1px solid black;
  border-radius: 5px;
}