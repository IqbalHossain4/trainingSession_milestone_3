<header>
  <div>
    <h1>{{ shop.name }}</h1>
  </div>

  <div>
    <ul>
      {% for link in linklists.main-menu.links -%}
        <li>{{ link.title | link_to: link.url }}</li>
      {%- endfor %}
    </ul>

  </div>

  <div>
    <form action="{{ routes.search_url }}">
      <input
        type="search"
        name="q"
        placeholder="search"
        value="{{ search.terms | escape }}">
      <button class="btnSearch" type="submit">Search</button>
    </form>
  </div>

</header>