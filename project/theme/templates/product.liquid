<h2>Products</h2>
<div class="productWrapper">

  <div style="height:350px;">
    <img src="{{ product.featured_image | image_url}}" />
  </div>
  <div>
    <h4>
      <span>Name:</span>
      {{ product.title }}</h4>
    <p>
      <span>Price:</span>
      {{ product.price | money }}</p>
    <p>
      <span>
        Description:</span>
      {{ product.description }}
    </p>


    {% form 'product', product %}
      <select name="id">
        {% for variant in product.variants %}
          <div>
            <p>Categories</p>
            <option value={{ variant.id }}>

              {{ product.title }}
            </option>
          </div>
        {% endfor %}
      </select>

      <div class="productqQuantity">
        <p>Quantity</p>
        <input
          type="number"
          id="quantity"
          name="quantity"
          value="1"
          placeholder="Increase Quantity"
          class="quantity">
      </div>
      <button
        style="margin-top:15px"
        class="btn"
        type="submit">{{ 'general.add_to_cart' | t }}</button>
    {% endform %}
  </div>
</div>